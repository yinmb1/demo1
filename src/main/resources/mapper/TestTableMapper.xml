<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yy.demo.demo1.common.dao.TestTableMapper">
    <resultMap id="BaseResultMap" type="yy.demo.demo1.common.entity.TestTable">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="age" property="age" jdbcType="INTEGER"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
        <result column="sex" property="sex" jdbcType="VARCHAR"/>
        <result column="score" property="score" jdbcType="INTEGER"/>
    </resultMap>

    <select id="getbyName" resultMap="BaseResultMap">
        SELECT *
        FROM test_table  where `name`=#{name}
    </select>

    <update id="updateTestTable">
        UPDATE  test_table
        <set>
            <if test="score != null">score =#{score,jdbcType=INTEGER}</if>
        </set>
        where `name`=#{name}
    </update>

    <delete id="deleteOutBoundApply" >
        DELETE FROM test_table where id=#{id}
    </delete>
</mapper>